<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <string name="thank_you">Gracias!</string>

    <!-- Header text for the list of toppings [CHAR LIMIT=20] -->
    <string name="toppings_text">Ingredientes</string>

    <string name="name_hint">Nombre</string>

    <!--Whipped Cream Check box text for the kind of topping [CHAR LIMIT=20] -->
    <string name="whippedCream_text">Crema batida</string>

    <!-- Chocolate check box text for the kind of topping [CHAR LIMIT=-20] -->
    <string name="chocolate_text">Chocolate</string>

    <!-- Header text for the quantity of drinks the user wants to order -->
    <string name="quantity_text">Cantidad</string>

    <!-- button text for the user to press in order to place the order -->
    <string name="order_button">Ordenar</string>

    <!-- Topping questions on the order summary along with yes/no values -->
    <string name="order_summary_add_whipped_cream">Agregar la crema batida?
        <xliff:g id="whipped_cream">%s</xliff:g></string>
    <string name="order_summary_add_chocolate">Agregar el chocolate?
        <xliff:g id="choclate">%s</xliff:g></string>

    <!--Name for the order summary. It will be shown in the format, "Name: Amy"
    where Amy is the user's name. [CHAR LIMIT=NONE] -->
    <string name="order_summary_name">Nombre: <xliff:g id="name" example="Amy"> %s</xliff:g></string>

    <!-- Quantity of coffees user ordered for order summary -->
    <string name="order_summary_quantity">Cantidad: <xliff:g id="quantity" example="2"> %d</xliff:g></string>

    <!-- Price total for the order summary -->
    <string name="order_summary_total">Total: <xliff:g id="bill_total" example="10"> %d</xliff:g></string>
    <string name="email_subject">Resumen del pedido de cafe por <xliff:g id="name" example="Amy">%s</xliff:g></string>
</resources>